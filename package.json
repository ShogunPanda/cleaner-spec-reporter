{
  "name": "cleaner-spec-reporter",
  "version": "1.0.2",
  "description": "Clean test reporter",
  "homepage": "https://sw.cowtech.it/cleaner-spec-reporter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShogunPanda/cleaner-spec-reporter.git"
  },
  "keywords": [
    "test",
    "spec"
  ],
  "bugs": {
    "url": "https://github.com/ShogunPanda/cleaner-spec-reporter/issues"
  },
  "author": "Shogun <shogun@cowtech.it>",
  "license": "ISC",
  "private": false,
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json && npm run lint",
    "format": "prettier -w src test",
    "lint": "eslint --cache",
    "test": "c8 -c test/config/c8-local.json node --test test/*.test.ts",
    "test:fixtures": "./test/fixtures/generate.sh",
    "ci": "npm run build && npm run test",
    "prepublishOnly": "npm run ci",
    "postpublish": "git push origin && git push origin -f --tags",
    "generate": "node test/fixtures/generate.ts"
  },
  "devDependencies": {
    "@cowtech/eslint-config": "^11.1.3",
    "@cowtech/typescript-config": "^0.2.5",
    "@types/node": "^24.10.1",
    "c8": "^10.1.3",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "split2": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">= 22.21.0"
  }
}
