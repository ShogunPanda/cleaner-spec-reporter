{
  "name": "cleaner-spec-reporter",
  "version": "0.2.0",
  "description": "Clean test reporter",
  "homepage": "https://sw.cowtech.it/cleaner-spec-reporter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShogunPanda/cleaner-spec-reporter.git"
  },
  "keywords": [
    "test",
    "spec"
  ],
  "bugs": {
    "url": "https://github.com/ShogunPanda/cleaner-spec-reporter/issues"
  },
  "author": "Shogun <shogun@cowtech.it>",
  "license": "ISC",
  "private": false,
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "postbuild": "npm run lint",
    "format": "prettier -w src test",
    "lint": "eslint --cache",
    "typecheck": "tsc -p . --noEmit",
    "test": "c8 -c test/config/c8-local.json node --env-file=test/config/env --test test/*.test.ts",
    "test:ci": "c8 -c test/config/c8-ci.json node --env-file=test/config/env --test-reporter=tap --test test/*.test.ts",
    "ci": "npm run build && npm run test:ci",
    "prepublishOnly": "npm run ci",
    "postpublish": "git push origin && git push origin -f --tags"
  },
  "devDependencies": {
    "@cowtech/eslint-config": "10.4.0",
    "@types/node": "^22.10.2",
    "c8": "^10.1.3",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">= 20.18.0"
  }
}
